<div class="container mt-4 p-4 w-25 form-container">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "user-form-text-field" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: "user-form-text-field" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "form-button mb-4" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
